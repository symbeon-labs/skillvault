# SkillVault Environment Variables
# Copy this file to .env and fill in the real values.
# NEVER commit .env to Git.

# ─── Creator Wallet ───────────────────────────────────────────
# Your wallet private key (Base / EVM compatible)
CREATOR_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Your wallet public address (safe to share)
CREATOR_WALLET_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# ─── SURGE / x402 ─────────────────────────────────────────────
# RPC endpoint for Base chain (where $SURGE lives)
BASE_RPC_URL=https://mainnet.base.org

# Optional: Coinbase Developer Platform API key (AgentKit)
CDP_API_KEY_NAME=YOUR_CDP_KEY_NAME
CDP_API_KEY_PRIVATE_KEY=YOUR_CDP_PRIVATE_KEY

# ─── SkillVault Config ─────────────────────────────────────────
# Default royalty fee in basis points (300 = 3%)
SKILLVAULT_FEE_BPS=300

# Split percentages (must sum to 10000)
SKILLVAULT_SPLIT_CREATOR=8000
SKILLVAULT_SPLIT_GOVERNANCE=1000
SKILLVAULT_SPLIT_COLLECTIVE=1000
